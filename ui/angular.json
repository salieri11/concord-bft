{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "concord-ui-e2e": {
      "root": "",
      "sourceRoot": "e2e",
      "projectType": "application",
      "architect": {

        "e2e": {
          "configurations": {
            "noserve": {
              "devServerTarget": ""
            },
            "csp-dev": {
              "devServerTarget": "concord-ui:serve:csp-dev",
              "host": "localhost.vmware.com",
              "port": 443
            },
            "csp-dev-integration": {
              "devServerTarget": "concord-ui:serve:csp-dev",
              "host": "localhost.vmware.com",
              "port": 443,
              "protractorConfig": "protractor.integration.conf.js"
            }
          },
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "concord-ui:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "concord-ui": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "assets": [
              "src/static"
            ],
            "styles": [
              "node_modules/@clr/icons/clr-icons.min.css",
              "src/static/prism.css",
              "src/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules"
              ]
            },
            "scripts": [
              "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
              "src/static/prism.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": true,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "csp-production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": true,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.csp-prod.ts"
                }
              ]
            },
            "csp-dev": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.csp-dev.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "concord-ui:build",
            "proxyConfig": "./e2e-proxy.conf.json"
          },
          "configurations": {
            "csp-dev": {
              "host": "0.0.0.0",
              "ssl": true,
              "disableHostCheck": true,
              "port": 443,
              "browserTarget": "concord-ui:build:csp-dev",
              "proxyConfig": "proxy.conf.js"
            },
            "production": {
              "browserTarget": "concord-ui:build:csp-dev"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "concord-ui:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [
              "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
              "src/static/prism.js"
            ],
            "styles": [
              "node_modules/@clr/icons/clr-icons.min.css",
              "src/static/prism.css",
              "src/styles.scss"
            ],
            "assets": [
              "src/static"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "concord-ui",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "concord",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "concord"
    }
  }
}
