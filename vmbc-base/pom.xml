        <io.zonky.test.postgres.version>10.6.0</io.zonky.test.postgres.version>
        <grpc.runtime.kotlinx.serialization.version>0.0.4-SNAPSHOT</grpc.runtime.kotlinx.serialization.version>
        <org.mybatis.version>3.4.6</org.mybatis.version>
        <org.mybatis.spring.version>1.3.2</org.mybatis.spring.version>
        <persephone.version>1.0.0-SNAPSHOT</persephone.version>
        <springframework.boot.version>2.1.6.RELEASE</springframework.boot.version>
        <springframework.session.version>2.1.0.RELEASE</springframework.session.version>
        <maven.plugin.protobuf>0.6.1</maven.plugin.protobuf>
        <protobuf.runtime.java.version>3.7.1</protobuf.runtime.java.version>
        <persephone.protobuf.source.path>../persephone/api/src/protobuf</persephone.protobuf.source.path>
